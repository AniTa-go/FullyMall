<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
     gradient 梯度：设置颜色梯度，即渐变色
     angle 角度：指渐变色旋转角度(只能以 90 递增，比如：0,90,180)
     -->
    <item>
        <shape>
            <corners android:radius="90dp"/>
            <gradient
                android:angle="90"
                android:startColor="@color/colorLightBlue7"
                android:centerColor="@color/colorLightBlue6"
                android:endColor="@color/colorLightBlue4" >
            </gradient>
        </shape>
    </item>
</layer-list>
